extends ../layout

block content
  .card.form-card.gradient-bar
    .card-body
      .logo
        img(src="/images/logo.png")
        h3 ripple.fm
      form.login(action="login", method="POST")
        input(type="hidden", name="_csrf", value=csrfToken || prev__csrf)
        .form-group
          label(for="emailOrUsername") Email or Username
          input.form-control(type="text", name="emailOrUsername" value=prev_emailOrUsername || '')
        .form-group
          label(for="password")
          | Password
          small.pt-2
            a.float-right(href="/forgot-password") forgot password?
          input.form-control(type="password", name="password")
        button.btn.btn-md.btn-primary.mt-4.float-right(type="submit") Log In
