doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title ripple.fm
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto+Condensed')
    link(rel='stylesheet', href='/app.bundle.css')
    script(src='/app.bundle.js')

  body
    .container
      .messages
        each msgType in Object.keys(locals.messages)
          each message in locals.messages[msgType]
            div(class="alert alert-" + msgType) #{message}
      block content
