{
  "name": "ripple-auth",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Daniel <danielrudn@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && yarn watch",
    "build": "yarn build-ts && yarn build-sass",
    "build-ts": "tsc",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch":
      "concurrently -k -p '[{name}]' -n 'TypeScript,Express,Sass' 'yarn watch-ts' 'yarn watch-server' 'yarn watch-sass'",
    "watch-ts": "tsc -w",
    "watch-sass":
      "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "watch-server": "nodemon dist"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/connect-redis": "^0.0.7",
    "@types/express": "^4.0.39",
    "@types/express-session": "^1.15.6",
    "@types/helmet": "^0.0.37",
    "@types/morgan": "^1.7.35",
    "concurrently": "^3.5.1",
    "node-sass": "^4.7.2",
    "nodemon": "^1.13.3",
    "prettier": "^1.9.2",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "connect-redis": "^3.3.2",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "helmet": "^3.9.0",
    "morgan": "^1.9.0",
    "pug": "^2.0.0-rc.4"
  }
}
